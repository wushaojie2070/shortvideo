
.page {
	height: 100%;
	background-color: #333333;
	color: #d4d4d4;
}
.in-one-line{
	display: flex;
	flex-direction: row;
	justify-content: center;
}
.in-one-column{
	display: flex;
	flex-direction: column;	
	justify-content: center;
}
/* 文字 */
.orcde-text{
	width: 100%;
	text-align: center;
	position: relative;
	top: 40rpx;
}
.text-title{
	color: #FFFFFF;
	font-size: 24px;
	font-weight: bold;
	padding: 10rpx 0;
}
.text-context{
	font-size: 14px;
	padding: 20rpx 0;
}
/*  按钮 */
.orcde-btn{
	width: 100%;
	position: relative;
	top: -240rpx;
}
.btn-one{
	text-align: center;
	width: 50%;
}
.btn-bg{
	display: inline-block;
	width: 120rpx;
	height: 120rpx;
	border-radius: 60rpx;
	background-color: #474747;
	vertical-align: middle;
	margin: 10rpx 0;
}
.btn-image{
	display: block;
	padding: 28rpx 28rpx;
}
.btn-name{
	font-size: 12px;
}

